<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hyphenate.easeui.widget.EaseChatInputMenu
        android:id="@+id/input_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <com.hyphenate.media.EMCallSurfaceView
        android:id="@+id/oppositeSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <com.hyphenate.media.EMCallSurfaceView
        android:id="@+id/localSurface"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/video_call"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/video_cancel"
        android:background="#f10505"
        android:gravity="center"
        android:text="接听"
        android:visibility="visible" />

    <TextView
        android:id="@+id/video_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#f10505"
        android:gravity="center"
        android:text="拒绝"
        android:visibility="visible" />

    <TextView
        android:id="@+id/video_speaker"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/video_cancel"
        android:background="#f10505"
        android:gravity="center"
        android:text="扬声器切换" />

    <TextView
        android:id="@+id/video_set_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f10505"
        android:text="翻转摄像头" />
</RelativeLayout>