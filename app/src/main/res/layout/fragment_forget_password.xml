<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <www.mrray.cn.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="忘记密码" />

    <EditText
        android:id="@+id/forget_password_phone_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/login_phone"
        android:drawablePadding="25dp"
        android:hint="@string/please_input_phone"
        android:paddingLeft="30dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_login_hint_color"
        android:textSize="@dimen/text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/login_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/forget_password_code_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableLeft="@mipmap/login_phone_code"
            android:drawablePadding="22dp"
            android:gravity="center_vertical"
            android:hint="@string/please_input_message_it_code"
            android:paddingLeft="30dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_login_hint_color"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/forget_password_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="获取验证码"
            android:textColor="#2f3c52"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <EditText
        android:id="@+id/forget_password_password_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/login_user_password"
        android:drawablePadding="24dp"
        android:hint="请输入新密码"
        android:paddingLeft="30dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_login_hint_color"
        android:textSize="@dimen/text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/login_divider" />

    <EditText
        android:id="@+id/forget_password_password_sure_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/login_user_password"
        android:drawablePadding="24dp"
        android:hint="再次确认密码"
        android:paddingLeft="30dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_login_hint_color"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/forget_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/button_background"
        android:text="@string/sure"
        android:textColor="@color/white" />
</LinearLayout>