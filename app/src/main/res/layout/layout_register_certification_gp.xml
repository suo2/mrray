<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <www.mrray.cn.view.LeftBlueTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:text_content="补充信息" />

        <www.mrray.cn.view.CustomRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:ev_content_hint="请输入"
            app:is_required="true"
            app:tv_name="机构名称" />

        <www.mrray.cn.view.CustomRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:ev_content_hint="请输入"
            app:is_required="true"
            app:tv_name="机构类型" />

        <www.mrray.cn.view.CustomRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:ev_content_hint="请输入"
            app:is_required="true"
            app:tv_name="证件编号" />

        <www.mrray.cn.view.CustomRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:ev_content_hint="请输入"
            app:is_required="true"
            app:tv_name="有效期" />

        <www.mrray.cn.view.CustomRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:ev_content_hint="请输入"
            app:is_required="true"
            app:tv_name="机构资质编号" />

        <www.mrray.cn.view.CustomRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:ev_content_hint="请输入"
            app:is_required="true"
            app:tv_name="经营范围" />

        <www.mrray.cn.view.LeftBlueTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            app:text_content="上传文件" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/register_up_load__add_bg"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingBottom="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/add" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="12dp"
                    android:text="上传营业执照"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="*"
                    android:textColor="#ff656c" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/register_up_load__add_bg"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingBottom="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/add" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="12dp"
                    android:text="上传资质证明"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="*"
                    android:textColor="#ff656c" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:text="支持jpg/png/gif格式的图片，单张大小20M以内"
            android:textColor="#999999" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/register_user_info_left"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:background="#eeecea"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/register_user_info_right" />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="@+id/register_user_info_left"
                app:layout_constraintRight_toRightOf="@+id/register_user_info_left"
                android:id="@+id/left_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete" />


            <ImageView
                android:id="@+id/register_user_info_right"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:background="#eeecea"
                app:layout_constraintLeft_toRightOf="@+id/register_user_info_left"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="@+id/register_user_info_right"
                app:layout_constraintRight_toRightOf="@+id/register_user_info_right"
                android:id="@+id/right_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>