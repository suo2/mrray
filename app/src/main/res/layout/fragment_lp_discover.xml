<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/mTabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tabMinWidth="100dp"
        app:tabIndicatorColor="@color/item_yellow"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/white"
        app:tabBackground="@color/tab_title_bg"
        app:tabTextColor="@color/item_gray" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/division_line"
        android:background="@color/division_line_bg"/>

        <www.mrray.cn.view.NoSrcollViewPage
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>