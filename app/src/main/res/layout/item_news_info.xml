<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="@dimen/widget_10"
    android:paddingRight="@dimen/widget_10"
    android:paddingTop="@dimen/widget_5"
    android:paddingBottom="@dimen/widget_5"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widget_20"
        android:layout_alignParentLeft="true"
        android:textColor="@color/item_attr_value"
        android:layout_toLeftOf="@+id/img"
        android:textSize="@dimen/text_size"
        android:ellipsize="end"
        android:text="TextView"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:layout_marginRight="@dimen/widget_20"
        android:layout_toLeftOf="@+id/img">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/text_size_small"
            android:text="华尔街" />

        <TextView
            android:id="@+id/readCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/time"
            android:layout_marginRight="@dimen/widget_10"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/text_size_small"
            android:text="234" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/from"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/text_size_small"
            android:text="2018.1.1" />
    </RelativeLayout>

</RelativeLayout>