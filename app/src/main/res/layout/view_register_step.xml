<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/register_img_step"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_step_num_background_undone"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/register_step_undone_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_txt_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/username_and_password"
        android:textColor="@color/register_step_undone_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_img_step" />

    <View
        android:id="@+id/register_view_step_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/register_step_undone_color"
        app:layout_constraintBottom_toBottomOf="@+id/register_img_step"
        app:layout_constraintLeft_toRightOf="@+id/register_img_step"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/register_img_step" />

    <View
        android:id="@+id/register_view_step_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:background="@color/register_step_undone_color"
        app:layout_constraintBottom_toBottomOf="@+id/register_img_step"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/register_img_step"
        app:layout_constraintTop_toTopOf="@+id/register_img_step" />


</android.support.constraint.ConstraintLayout>