<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <www.mrray.cn.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_visible="false"
        app:title_text="@string/user_info_auth" />

    <www.mrray.cn.view.UserInfoAuthItemView
        android:id="@+id/user_info_auth_username_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_item_height"
        android:layout_marginTop="@dimen/margin"
        app:des_content="@string/common_auth_info_content"
        app:left_img="@mipmap/name_ce"
        app:title_content="未实名认证" />

    <www.mrray.cn.view.UserInfoAuthItemView
        android:id="@+id/user_info_auth_email_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_item_height"
        app:des_content="@string/common_auth_info_content"
        app:left_img="@mipmap/email_ce"
        app:title_content="邮箱认证" />

    <www.mrray.cn.view.UserInfoAuthItemView
        android:id="@+id/user_info_auth_phone_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_item_height"
        app:des_content="@string/common_auth_info_content"
        app:left_img="@mipmap/phone_ce"
        app:title_content="手机认证" />

    <www.mrray.cn.view.UserInfoAuthItemView
        android:id="@+id/user_info_auth_face_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_item_height"
        app:des_content="@string/common_auth_info_content"
        app:left_img="@mipmap/face_ce"
        app:title_content="刷脸认证" />
</LinearLayout>