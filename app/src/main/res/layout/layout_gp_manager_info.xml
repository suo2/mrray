<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/gp_manager_info_casted_money_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:text="已投金额："
        android:textColor="#a1a1a1"
        android:textSize="@dimen/text_size_small_x"
        app:layout_constraintBottom_toBottomOf="@+id/gp_manager_info_casted_money_count_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gp_manager_info_casted_money_count_txt" />

    <TextView
        android:id="@+id/gp_manager_info_casted_money_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:textColor="#44556f"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintLeft_toRightOf="@+id/gp_manager_info_casted_money_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gp_manager_info_cast_money_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余可投："
        android:textColor="#a1a1a1"
        android:textSize="@dimen/text_size_small_x"
        app:layout_constraintBottom_toBottomOf="@+id/gp_manager_info_cast_money_count_txt"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/gp_manager_info_cast_money_count_txt" />


    <TextView
        android:id="@+id/gp_manager_info_cast_money_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:textColor="#44556f"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintLeft_toRightOf="@+id/gp_manager_info_cast_money_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gp_manager_info_project_num_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:text="已投项目："
        android:textColor="#a1a1a1"
        android:textSize="@dimen/text_size_small_x"
        app:layout_constraintBottom_toBottomOf="@+id/gp_manager_info_project_num_count_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gp_manager_info_casted_money_count_txt"
        app:layout_constraintTop_toTopOf="@+id/gp_manager_info_project_num_count_txt" />

    <TextView
        android:id="@+id/gp_manager_info_project_num_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="10dp"
        android:textColor="#44556f"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintLeft_toRightOf="@+id/gp_manager_info_project_num_txt"
        app:layout_constraintTop_toBottomOf="@+id/gp_manager_info_casted_money_count_txt" />

    <TextView
        android:id="@+id/gp_manager_return_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回报倍数："
        android:textColor="#a1a1a1"
        android:textSize="@dimen/text_size_small_x"
        app:layout_constraintBottom_toBottomOf="@+id/gp_manager_info_project_num_count_txt"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/gp_manager_info_casted_money_count_txt"
        app:layout_constraintTop_toTopOf="@+id/gp_manager_info_project_num_count_txt" />

    <TextView
        android:id="@+id/gp_manager_return_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:textColor="#44556f"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintLeft_toRightOf="@+id/gp_manager_return_txt"
        app:layout_constraintTop_toTopOf="@+id/gp_manager_info_project_num_count_txt" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>