<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/widget_5"
        android:paddingTop="@dimen/widget_5"
        android:paddingRight="@dimen/widget_5"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/widget_5"
        android:layout_toRightOf="@+id/image"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/widget_5"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_title"
                android:textSize="@dimen/text_size"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:lines="1"
                android:ellipsize="end"
                android:text="成都德同银科锦程创业投资企业"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectName"
            android:layout_toRightOf="@+id/logoPath"
            android:layout_marginLeft="@dimen/widget_5"
            android:layout_marginTop="@dimen/widget_10"
            android:layout_marginBottom="@dimen/widget_5"
            android:layout_marginRight="40dp"
            android:layout_alignBaseline="@+id/logoPath"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_attr_name"
                android:textSize="@dimen/text_size_small"
                android:text="完成百分比"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_toRightOf="@+id/progress_title"
                android:layout_toLeftOf="@+id/progressBarValue"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/widget_10"
                android:layout_marginLeft="@dimen/widget_10"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_layer_list" />
            />

            <TextView
                android:id="@+id/progressBarValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_red"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/startTime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/high_project_item_name"
                    android:layout_alignBaseline="@+id/startTime"
                    android:text="发布时间"
                    />
                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/startTime_text"
                    style="@style/high_project_item_value"
                    android:layout_marginLeft="@dimen/widget_10"
                    />

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/startTime_text"
                    android:layout_alignBaseline="@+id/address"
                    style="@style/high_project_item_name"
                    android:text="所在地"
                    />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/address_text"
                    android:layout_below="@+id/startTime"
                    style="@style/high_project_item_value"
                    android:layout_marginLeft="@dimen/widget_10"
                    />

                <TextView
                    android:id="@+id/amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_text"
                    style="@style/high_project_item_name"
                    android:layout_alignBaseline="@+id/amount"
                    android:text="融资金额"
                    />
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/amount_text"
                    android:layout_below="@+id/address"
                    style="@style/high_project_item_value"
                    android:layout_marginLeft="@dimen/widget_10"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/rotation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/high_project_item_name"
                    android:layout_alignBaseline="@+id/rotation"
                    android:text="轮次"
                    />
                <TextView
                    android:id="@+id/rotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rotation_text"
                    style="@style/high_project_item_value"
                    android:layout_marginLeft="@dimen/widget_10"
                    android:text="750万"
                    />

                <TextView
                    android:id="@+id/industry_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rotation_text"
                    style="@style/high_project_item_name"
                    android:layout_alignBaseline="@+id/industry"
                    android:text="行业"
                    />
                <TextView
                    android:id="@+id/industry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/industry_text"
                    android:layout_below="@+id/rotation"
                    style="@style/high_project_item_value"
                    android:layout_marginLeft="@dimen/widget_10"
                    android:text="2"
                    />

                <TextView
                    android:id="@+id/completedAmount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/industry_text"
                    style="@style/high_project_item_name"
                    android:layout_alignBaseline="@+id/completedAmount"
                    android:text="已融金额"
                    />
                <TextView
                    android:id="@+id/completedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/completedAmount_text"
                    android:layout_below="@+id/industry"
                    style="@style/high_project_item_value"
                    android:layout_marginLeft="@dimen/widget_10"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/recommend_logo_size"
        android:layout_height="@dimen/recommend_logo_size"
        android:src="@mipmap/agency_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />
</RelativeLayout>