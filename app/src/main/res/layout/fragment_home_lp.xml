<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mSwipeRefreshLayout">
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@color/listview_bg"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/homeBanner"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/notification_icon"
                android:layout_alignParentRight="true"
                android:padding="@dimen/widget_10"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/head_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/widget_10"
                android:paddingBottom="@dimen/widget_10"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_investmentAmount"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/investmentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_title_bar"
                        android:textColor="@color/item_yellow"
                        />
                    <TextView
                        android:id="@+id/investmentAmountUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/investmentAmount"
                        android:layout_alignBaseline="@+id/investmentAmount"
                        android:textSize="@dimen/text_size_small_x"
                        android:textColor="@color/item_yellow"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cumulative_investment_amount"
                    android:layout_marginTop="@dimen/widget_5"
                    android:layout_centerHorizontal="true"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/register_step_undone_color"
                    android:layout_below="@+id/ll_investmentAmount"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/widget_10"
                android:paddingBottom="@dimen/widget_10"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_gpCount"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/gpCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_title_bar"
                        android:textColor="@color/item_yellow"
                        />
                    <TextView
                        android:id="@+id/gpCountUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/gpCount"
                        android:layout_alignBaseline="@+id/gpCount"
                        android:textSize="@dimen/text_size_small_x"
                        android:textColor="@color/item_yellow"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gp_count"
                    android:layout_marginTop="@dimen/widget_5"
                    android:layout_centerHorizontal="true"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/register_step_undone_color"
                    android:layout_below="@+id/ll_gpCount"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/widget_10"
                android:paddingBottom="@dimen/widget_10"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_enterpriseCount"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/enterpriseCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_title_bar"
                        android:textColor="@color/item_yellow"
                        />

                    <TextView
                        android:id="@+id/enterpriseCountUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/enterpriseCount"
                        android:layout_alignBaseline="@+id/enterpriseCount"
                        android:textSize="@dimen/text_size_small_x"
                        android:textColor="@color/item_yellow"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enterprises_count"
                    android:layout_marginTop="@dimen/widget_5"
                    android:layout_centerHorizontal="true"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/register_step_undone_color"
                    android:layout_below="@+id/ll_enterpriseCount"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/widget_10"
                android:paddingBottom="@dimen/widget_10"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_investorsCount"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/investorsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_title_bar"
                        android:textColor="@color/item_yellow"
                        />

                    <TextView
                        android:id="@+id/investorsCountUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/investorsCount"
                        android:layout_alignBaseline="@+id/investorsCount"
                        android:textSize="@dimen/text_size_small_x"
                        android:textColor="@color/item_yellow"
                        android:text=""
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lp_count"
                    android:layout_marginTop="@dimen/widget_5"
                    android:layout_centerHorizontal="true"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/register_step_undone_color"
                    android:layout_below="@+id/ll_investorsCount"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fine_selectfund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/head_intro"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fine_selectfund"
                    android:layout_marginLeft="@dimen/widget_10"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_default_color"
                    />

                <TextView
                    android:id="@+id/high_customer_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/more"
                    android:drawablePadding="@dimen/widget_5"
                    android:padding="@dimen/widget_5"
                    android:drawableRight="@mipmap/arrow_right"
                    />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fineSelectfundRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="208dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_high_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ll_fine_selectfund"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/high_project"
                    android:layout_marginLeft="@dimen/widget_10"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_default_color"
                    />

                <TextView
                    android:id="@+id/high_project_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/more"
                    android:textSize="@dimen/text_size_small"
                    android:drawablePadding="@dimen/widget_5"
                    android:padding="@dimen/widget_5"
                    android:drawableRight="@mipmap/arrow_right"
                    />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/highProjectRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_home_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_high_project"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_activity"
                    android:layout_marginLeft="@dimen/widget_10"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_default_color"
                    />

                <TextView
                    android:id="@+id/high_activity_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/more"
                    android:drawablePadding="@dimen/widget_5"
                    android:padding="@dimen/widget_5"
                    android:drawableRight="@mipmap/arrow_right"
                    />

            </RelativeLayout>

            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/activityBanner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:open_mz_mode="true"
                app:canLoop="true"
                app:indicatorAlign="center"
                app:indicatorPaddingLeft="10dp"
                tools:layout_editor_absoluteY="208dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widget_10"
                android:background="@color/white"
                android:padding="@dimen/widget_10"
                >
                <TextView
                    android:id="@+id/marquee_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/item_yellow"
                    android:text="@string/headline" />

                <View
                    android:layout_width="@dimen/division_line"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/widget_10"
                    android:layout_marginRight="@dimen/widget_10"
                    android:layout_marginTop="@dimen/widget_5"
                    android:layout_marginBottom="@dimen/widget_5"
                    ></View>

                <www.mrray.cn.view.UPMarqueeView
                    android:id="@+id/mUPMarqueeView"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/marquee_title"
                    android:layout_height="match_parent">

                </www.mrray.cn.view.UPMarqueeView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_10"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/widget_10"
                android:background="@color/white"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/ad_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_10"
                    android:textColor="@color/item_yellow"
                    android:layout_toLeftOf="@+id/img_left"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size"
                    android:text="最牛基金增值12倍"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ad_title_1"
                    android:layout_marginTop="@dimen/widget_10"
                    android:textColor="@color/item_attr_name"
                    android:textSize="@dimen/text_size_small"
                    android:text="历史荣获金牛奖"
                    />

                <ImageView
                    android:id="@+id/img_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_default_img"
                    android:layout_marginLeft="@dimen/widget_5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="@dimen/widget_10"
                android:background="@color/white"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/ad_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/item_yellow"
                    android:layout_toLeftOf="@+id/img_right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size"
                    android:text="最牛基金增值12倍"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ad_title_2"
                    android:layout_marginTop="@dimen/widget_10"
                    android:textColor="@color/item_attr_name"
                    android:textSize="@dimen/text_size_small"
                    android:text="历史荣获金牛奖"
                    />

                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/home_default2_img"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/newsInfoRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/widget_10"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/ll_ad"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="208dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>