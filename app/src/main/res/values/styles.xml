<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="high_project_item_name">
        <item name="android:textColor">@color/item_attr_name</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/widget_5</item>
        <item name="android:paddingRight">@dimen/widget_5</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_small_x</item>
    </style>

    <style name="high_project_item_value">
        <item name="android:textColor">@color/item_attr_value</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/widget_5</item>
        <item name="android:paddingRight">@dimen/widget_5</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="Theme.MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- This disables the black preview screen -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="filter_text_style">
        <item name="android:textColor">@color/item_attr_value</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/widget_5</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:color">@color/text_color_999</item>
        <item name="android:paddingTop">@dimen/widget_5</item>
        <item name="android:paddingBottom">@dimen/widget_5</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>
